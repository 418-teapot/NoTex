%===-- Style/Theorem.sty - Theorem and Proof Format Style ------------------===%
%
%===------------------------------------------------------------------------===%
\NeedsTexFormat{LaTex2e}
\ProvidesPackage{Theorem}[2023/11/27 v0.0.4]

\RequirePackage{color}
\RequirePackage[usenames, dvipsnames]{xcolor}

\declaretheoremstyle[
    headfont = {\bfseries\sffamily\footnotesize},
    notefont = {\normalfont},
    %notebraces = {}{},
    bodyfont = {\normalfont}, %\itshape
    headpunct = {\newline},
    headformat = {
        \makebox[0pt][r] {\NAME\ \NUMBER\hspace{\marginparsep}}
        \hskip-\spacelength{\normalsize\NOTE}
    },
]{theorem}
\tcolorboxenvironment{theorem}{
    boxrule = 0pt,
    boxsep = 0pt,
    colback = {White!90!Dandelion},
    enhanced jigsaw,
    borderline west = {1pt}{0pt}{Dandelion},
    sharp corners,
    before skip = 10pt,
    after skip = 10pt,
    left = 5pt,
    right = 5pt,
    breakable,
}
\declaretheorem[style=theorem]{theorem}
\theoremstyle{theorem}

\newtheorem{definition}{Definition}
\tcolorboxenvironment{definition}{
    boxrule = 0pt,
    boxsep = 0pt,
    colback = {White!90!Cerulean},
    enhanced jigsaw,
    borderline west = {1pt}{0pt}{Cerulean},
    sharp corners,
    before skip = 10pt,
    after skip = 10pt,
    left = 5pt,
    right = 5pt,
    breakable,
}

\let\proof\relax
\let\endproof\relax
\declaretheoremstyle[
    headfont={\small\scshape},
    notefont={\normalsize\normalfont},
    %notebraces = {}{},
    bodyfont={\normalfont}, %\itshape
    headpunct={\newline},
    headformat={%
        \makebox[0pt][r]{\NAME\hspace{\marginparsep}}\hskip-\spacelength{\NOTE}},
]{proof}
\tcolorboxenvironment{proof}{
    boxrule = 0pt,
    boxsep = 0pt,
    colback = {White!90!WildStrawberry},
    enhanced jigsaw,
    borderline west = {1pt}{0pt}{WildStrawberry},
    sharp corners,
    before skip = 10pt,
    after skip = 10pt,
    left = 5pt,
    right = 5pt,
    breakable,
}
\declaretheorem[style=proof, qed=\qedsymbol]{proof}
